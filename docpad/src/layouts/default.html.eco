<!DOCTYPE html>
<html lang="en">
<head>
	<title><%=@site.title%> | <%= @document.title %></title>
	<meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1">
	<%- @getBlock("styles").add(["/css/unsemantic-grid-responsive-no-ie7.css", "/css/main.css"]).toHTML() %>
</head>
<body id="<%= @document.id %>"<%- if @document.layout != "default" then ' class="' + @document.layout + '"' %>>
	<div class="grid-parent">
		<%- @partial("header.html.eco", {title: @site.title}) %>
		<%- @content %>
		<%- @partial("footer.html.eco", {author: @site.author, date: @formatDate(@date, "YYYY")}) %>
	</div>
	
	<%- @partial("javascript.html") %>
	<script>
		<%= if @document.flickrSet then "loadPhotoSet('" + @document.flickrSet + "');" else "loadPhotoDay('" + @formatDate(@document.date, "YYYY-MM-DD") + "');" %>
	</script>
	<%- @partial("ga.html") %>
</body>
</html>